<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Welcome - ShopEase</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        /* Navbar adjustments */
        header {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
            background-color: #1E3A56;
            padding-top: 0.5rem;
            padding-bottom: 0.5rem;
        }

        /* Main content wrapper */
        .main-content {
            flex: 1;
            padding-top: 80px; 
        }

        footer {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            z-index: 1000;
            background-color: #1E3A56;
            padding-top: 0;
            padding-bottom: 0;
            color: white;
        }

            /* Footer content styling */
            footer .container {
                padding-bottom: 0;
                margin-bottom: 0;
            }

        /* Existing styles */
        .hover-underline {
            position: relative;
            transition: color 0.3s ease;
        }

            .hover-underline::after {
                content: '';
                position: absolute;
                width: 0;
                height: 2px;
                bottom: -2px;
                left: 0;
                background-color: deepskyblue;
                transition: width 0.3s ease;
            }

            .hover-underline:hover {
                color: deepskyblue !important;
            }

                .hover-underline:hover::after {
                    width: 100%;
                }

        .footer {
            background-color: #1E3A56;
            color: white;
        }

        .social-links a {
            transition: transform 0.3s ease;
        }

            .social-links a:hover {
                transform: translateY(-3px);
            }

        @@keyframes pulse {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.05);
            }

            100% {
                transform: scale(1);
            }
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #1E3A56; margin-top: 0; padding-top: 0.5rem; padding-bottom: 0.5rem;">
            <div class="container">
                <a class="navbar-brand" href="#">
                    <i class="fas fa-shopping-cart me-2"></i>ShopEase
                </a>
                <div class="d-flex align-items-center">
                    <span class="text-light me-3 d-none d-md-block">Welcome to Customer Portal</span>
                    <a href="#" class="btn btn-sm btn-outline-light me-2">
                        <i class="fas fa-info-circle"></i> About
                    </a>
                    <a href="#" class="btn btn-sm btn-outline-light">
                        <i class="fas fa-headset"></i> Support
                    </a>
                </div>
            </div>
        </nav>
    </header>

    <div class="main-content">
        @RenderBody()
    </div>

    <footer class="footer" style="margin-bottom: 0; padding-bottom: 0;">
        <div class="container py-4">
            <div class="row g-4">
                <div class="col-md-4">
                    <h5 class="mb-3" style="color: deepskyblue;">ShopEase Services</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="text-white text-decoration-none hover-underline">Store Locator</a></li>
                        <li class="mb-2"><a href="#" class="text-white text-decoration-none hover-underline">VIP Program</a></li>
                        <li><a href="#" class="text-white text-decoration-none hover-underline">Event Calendar</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5 class="mb-3" style="color: deepskyblue;">Legal</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="text-white text-decoration-none hover-underline">Privacy Policy</a></li>
                        <li class="mb-2"><a href="#" class="text-white text-decoration-none hover-underline">Terms of Use</a></li>
                        <li><a href="#" class="text-white text-decoration-none hover-underline">Cookie Policy</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5 class="mb-3" style="color: deepskyblue;">Connect With Us</h5>
                    <div class="social-links">
                        <a href="#" class="text-white me-3 fs-5"><i class="fab fa-facebook"></i></a>
                        <a href="#" class="text-white me-3 fs-5"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="text-white me-3 fs-5"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-white fs-5"><i class="fab fa-linkedin"></i></a>
                    </div>
                    <div class="mt-4">
                        <h5 class="mb-3" style="color: deepskyblue;">Newsletter</h5>
                        <div class="input-group">
                            <input type="email" class="form-control" placeholder="Enter your email">
                            <button class="btn btn-outline-light" type="button">
                                <i class="fas fa-arrow-right"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="text-center mt-4 pt-3 border-top border-secondary">
                <p class="mb-0 text-light">&copy; 2023 ShopEase. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
<script>
    // Initialize tooltips
    document.addEventListener('DOMContentLoaded', function() {
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    });
</script>